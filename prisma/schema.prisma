generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Tier {
  FREE
  PRO
}

enum DietType {
  none
  vegetarian
  vegan
  pescatarian
  keto
  paleo
  halal
  kosher
}

enum AgeGroup {
  adult
  teen
  child
}

enum PlanStatus {
  generating
  ready
  failed
}

// ─── Auth.js (NextAuth v5) default models ───────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  tier                Tier      @default(FREE)
  stripeCustomerId    String?
  generationsToday    Int       @default(0)
  generationsResetAt  DateTime  @default(now())

  accounts      Account[]
  sessions      Session[]
  household     Household?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── App models ─────────────────────────────────────────────────────

model Household {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String   @default("My Household")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  members     Member[]
  plans       Plan[]
  pantryItems PantryItem[]
}

model Member {
  id          String    @id @default(cuid())
  householdId String
  name        String
  ageGroup    AgeGroup  @default(adult)
  diet        DietType  @default(none)
  allergies   String[]  @default([])
  dislikes    String[]  @default([])
  goals       String[]  @default([])
  sortOrder   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@index([householdId, sortOrder])
}

model Plan {
  id           String     @id @default(cuid())
  householdId  String
  startDate    DateTime   @db.Date
  numDays      Int
  mealsEnabled Json       @default("{\"meal_1\":{\"enabled\":true,\"label\":\"Breakfast\",\"type\":\"breakfast\"},\"meal_2\":{\"enabled\":true,\"label\":\"Lunch\",\"type\":\"meal\"},\"meal_3\":{\"enabled\":true,\"label\":\"Dinner\",\"type\":\"meal\"},\"meal_4\":{\"enabled\":false,\"label\":\"Evening snack\",\"type\":\"snack\"}}")
  useItUpMode  Boolean    @default(false)
  status       PlanStatus @default(generating)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  planDays  PlanDay[]

  @@index([householdId, createdAt(sort: Desc)])
}

model PlanDay {
  id       String @id @default(cuid())
  planId   String
  dayIndex Int
  meals    Json
  createdAt DateTime @default(now())

  plan Plan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@unique([planId, dayIndex])
  @@index([planId, dayIndex])
}

model PantryItem {
  id          String   @id @default(cuid())
  householdId String
  name        String
  category    String   @default("other")
  createdAt   DateTime @default(now())

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@index([householdId])
}
